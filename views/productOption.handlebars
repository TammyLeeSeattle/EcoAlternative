<div class="container">
  {{#each product}}
  <h4>{{product_name}}</h4>
  {{/each}}
</div>

{{#each product}}
<div class="container">
  <div class="row">
    <div class="col s10">
      <p>{{product_description}}</p>
    </div>
    <div class="col s2"><img src="{{icon}}" alt="beauty_personal_care" height="45" width="45"></div>
  </div>
</div>
{{/each}}


<div class="container">
  <h4>Product List</h4>
</div>

{{#each productOptions}}
<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card horizontal #8bc34a light-green">
        <div class="card-image">
          <a href="{{external_link}}" target="_blank" class="white-text"><img src="{{image}}" height="240"
              width="240"></a>
        </div>
        <div class="card-stacked">
          <div class="card-content white-text">
            <span class="card-title">{{productOption_name}}</span>
            <p>{{environmental_impact}}</p>
            <h5><strong>Fun Fact</strong></h5>
            <p>{{fun_fact}}</p>
            
              
              <h5><strong>Quick Facts</strong></h5> 
                <div class="col s6" >
                    {{#if plastic_free}}
                      <img src="/assets/images/badges/plastic-free.png" width="100px">
                    {{/if}}
                </div>
                
                <div class="col s6" >
                  {{#if reusable}}
                    <img src="/assets/images/badges/reusable.png" width="100px">
                  {{/if}}
                </div>
                <div class="col s6" >
                  {{#if stylish}}
                    <img src="/assets/images/badges/stylish.png" width="100px">
                  {{/if}}
                </div>
                <div class="col s6">
                  {{#if ingredients}}
                    <img src="/assets/images/badges/ingredients.png" width="100px">
                  {{/if}}
                </div>
              
            
          </div>  
          <div class="card-action">
            
            <a href="{{source}}" target="_blank" class="white-text">See Source</a>
          </div>
        
        </div>
        
      </div>
    </div>
  </div>
</div>
{{/each}}